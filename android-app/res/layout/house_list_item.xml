<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" >

    <ImageView
        android:id="@+id/image_room_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/hotel" />

    
    <LinearLayout 
        android:id="@+id/group_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >
        <TextView 
            android:id="@+id/text_room_price"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        />
        
        <TextView
        android:id="@+id/text_room_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button" 
        android:text="预定"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:padding="10dp"/>
 	    
 	</LinearLayout>   
    
 	
 	<LinearLayout 
 	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/group_price"
        android:layout_toRightOf="@id/image_room_icon"
 	    >
 	    
 	    <TextView 
 	        android:id="@+id/text_room_name"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        />
 	    <TextView 
 	        android:id="@+id/text_room_type"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        />
 	    
 	    
 	</LinearLayout>
    
    
</RelativeLayout>