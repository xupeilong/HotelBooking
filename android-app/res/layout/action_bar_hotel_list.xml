<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    >
    
    <ImageView 
        android:id="@+id/button_back"
        android:src="@drawable/arrow_left"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:background="@drawable/selector_actionbar_button_1"
        android:layout_alignParentLeft="true"
        />
 	
    <TextView
        android:id="@+id/text_button_map"
        android:text="地图" 
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_actionbar_button_3"
        android:gravity="center"
        android:layout_alignParentRight="true"
        />
    
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_action_bar_2"
        android:gravity="center"
        android:text="酒店列表" 
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_toRightOf="@id/button_back"
        android:layout_toLeftOf="@id/text_button_map"/>

    

</RelativeLayout>
